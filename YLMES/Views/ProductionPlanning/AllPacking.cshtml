@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>友力信息管理系统</title>
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
    <link href="~/layui/css/layui.css" rel="stylesheet" />
    <script type="text/javascript" src="../../js/jquery.js"></script>
    <script type="text/javascript" src="~/js/jquery-1.9.1.min.js"></script>
    <script src="~/layui/layui.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/lib/layer/2.4/layer.js"></script>
    <script type="text/javascript" src="~/lib/laypage/1.2/laypage.js"></script>
    <style>
        .layui-table-cell {
            overflow: inherit;
            height: inherit;
        }

        td:nth-child(3) {
            overflow: hidden;
        }
    </style>
    <style type="text/css">
        .layui-table-cell {
            overflow: inherit;
            height: inherit;
        }
    </style>
    <script type="text/javascript">
    layui.use(['table', 'layer'], function () {
        var table = layui.table, layer = layui.layer;
        var tableIns = table.render({
            elem: '#tw'
               , url: '/ProductionPlanning/DetailInfo'
               , cols: [[
                 { field: 'ID', width: 100, title: '编号' }
               , { field: 'PackageName', width: 210, title: '包装条码' }
               , { field: 'PartNumber', width: 210, title: '产品名称'}
               , { field: 'PartSpec', width: 235, title: '产品规格' }
               , { field: 'PartMaterial', width: 100, title: '产品材料' }
               , { field: 'figureNumber', width: 235, title: '产品图号' }
               , { field: 'QTY', width: 150, title: '数量', edit: 'text' }
                , { field: 'Units', width: 90, title: '单位', edit: 'text' }
               , { field: 'right', width: 250, align: 'center', toolbar: '#barDemo' }
               ]]
        });
        $('.AllSerach').bind("input propertychange", function (event) {
            var pn = $("#AllSerach").val()
            tableIns.reload({
                page: {
                    curr: 1
                },
                where: {
                    pcname: pn
                }
            });
        });
        table.on('tool(demo)', function (obj) {
            var data = obj.data;
            switch (obj.event) {
                case 'add':
                    var pnumber = data.PartNumber;
                    var pspec = data.PartSpec;
                    var pmater = data.PartMaterial;
                    var pn = data.PackageName;
                    var id = data.ID;
                    var qty = data.QTY;
                    var unit = data.Units;
                    var figureNumber = data.figureNumber;
                    var url = "/ProductionPlanning/txt?pnumber=" + pnumber + "&pspec=" + pspec + "&pmater=" + pmater + "&ID=" + id + "&pn=" + pn + "&fn=" + figureNumber + "&qty=" + qty + "&unit=" + unit;
                    var index = layer.open({
                        type: 2,
                        content: url,
                        title: "打印标签",
                        maxmin: true
                    });
                    layer.full(index);
                    break;
                case 'update':
                    var id = data.ID;
                    var count = data.QTY;
                    $.ajax({
                        url: "/ProductionPlanning/UpdateCount?id=" + id + "&Count=" + count,
                        type: 'post',
                        success: function (data) {
                            if (data == "true") {
                                layer.msg("修改成功！", { icon: 6 });
                                table.reload('tw');
                            }
                            else {
                                layer.msg("请联系维护人员！", { icon: 6 });
                            }
                        }
                    });
                    break;
                case 'delete':
                    var id = data.ID;
                    layer.confirm("真的删除行么", function (index) {
                        $.ajax({
                            url: "/ProductionPlanning/DeleteCount?id=" + id,
                            type: 'post',
                            success: function (data) {
                                if (data == "true") {
                                    layer.msg("删除成功！", { icon: 6 });
                                    table.reload('tw');
                                }
                                else {
                                    layer.msg("请联系维护人员！", { icon: 6 });
                                }
                            }
                        });
                    });
                    break;
            }
        });
    });
    </script>
</head>
<body>
    <script type="text/html" id="barDemo">
        <a class="layui-btn layui-btn-xs" id="update" lay-event="update">修改数量</a>
        <a class="layui-btn layui-btn-xs" id="add" lay-event="add">打印</a>  
        <a class="layui-btn layui-btn-danger layui-btn-xs" id="delete" lay-event="delete">删除</a>    
    </script>
    <div class="rightinfo">
        <div class="tools">
            <ul class="toolbar">
                <li>
                    关键字查询：
                    <input class="AllSerach" id="AllSerach" type="text" style="width:180px;" placeholder="请输入关键字" />
                </li>
            </ul>
        </div>
        <table class="tablelist" id="tw" lay-filter="demo"></table>
     </div>
</body>
</html>
