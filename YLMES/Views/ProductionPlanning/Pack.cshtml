    <style>
        * {
            margin: 0;
            padding: 0;
            font-family: "微软雅黑";
            font-style: normal;
            font-size: 14px;
        }

        .dropdown {
            position: relative;
            display: inline-block;
            width: 300px;
            padding-left: 10px;
        }

        .dropdown-selected {
            width: 100% !important;
            height: 30px;
            line-height: 30px;
            border: 1px solid #c6c8cc;
            -webkit-border-radius: 4px;
            -moz-border-radius: 4px;
            border-radius: 4px;
            color: #333;
            text-indent: 10px;
            margin-bottom: 0 !important;
        }

        .dropdown ul {
            padding: 0;
            width: 100%;
            max-height: 200px;
            overflow-y: auto;
            background-color: #fff;
            margin-top: 2px;
            border: 1px solid #c6c8cc;
            position: absolute;
            display: none;
            z-index: 2;
        }

            .dropdown ul li {
                list-style: none;
                text-indent: 10px;
            }

                .dropdown ul li a {
                    display: block;
                    color: #282c33;
                    text-decoration: none;
                    overflow: hidden;
                    text-overflow: ellipsis;
                    white-space: nowrap;
                }

                .dropdown ul li:hover {
                    background-color: #f2f6fa;
                }

                .dropdown ul li a:active, .dropdown ul li.active a {
                    background-color: #e4e9f2;
                }
    </style>


    <script type="text/javascript">
        $(function () {
            $('.dropdown-selected').bind("input propertychange", function (event) {
                var w = $("#search-input").val();
                if (w != null) {
                    $.ajax({
                        type: "GET",
                        url: '/ProductionPlanning/ProductWorkorderNO',
                        data: { workorder: $("#search-input").val() },
                        dataType: "json",
                        success: function (data) {
                            var item;
                            if (data != null) {
                                //alert(data.length);
                                $("#search ul li ").remove();
                                $.each(data, function (i, result) {

                                    $('#search ul').append('<li><a href="javaScript:">' + result.WorkorderNO + '</a></li>');
                                });
                                w = null;
                            }

                        }
                    });
                }
            });
            $("#search-input").blur(function () {
                // $("#search").find("ul li").hide();
            });
            $('#search-input').bind('keyup', function (event) {
                var lenght = $("#search").find("ul li a").length;
                if (event.keyCode == "13") {
                    $('#query').click();
                }
            });
            $(".click").click(function () {
                $(".tip").fadeIn(200);
            });
            $(document).keydown(function (e) {
                if (e.keyCode == 13) {
                    $("#query").click();
                }
            });
            $(".tiptop a").click(function () {
                $(".tip").fadeOut(200);
            });

            $(".sure").click(function () {
                $(".tip").fadeOut(100);
            });

            $(".cancel").click(function () {
                $(".tip").fadeOut(100);
            });
            layui.use(['table', 'layer'], function () {
                var table = layui.table, layer = layui.layer;
                $("#query").click(function () {
                    var WorkorderNO = $("#search-input").val();
                    var QTY = $("#QTY").val();
                    var number = $("#number").val();
                    // alert(QTY+number);
                    table.render({
                        elem: '#tw'
                   , url: '/ProductionPlanning/Productlist?WorkorderNO=' + WorkorderNO
                   , page: true
                   , limit: 15
                   , done: function () {
                       $("tr a").hide()
                       $("tr").hover(function () {
                           $(this).children().last().children().children().toggle();
                       })
                   }
                   , cols: [[
                    { field: '项目名称', width: 250, title: '项目名称' }
                   , { field: '产品名称', width: 235, title: '产品名称', sort: true }
                   , { field: '工单总数量', width: 150, title: '工单总数量' }
                   , { field: '包装名称', width: 250, title: '包装名称' }
                   , { field: '包装数量', width: 120, title: '包装数量' }
                   , { field: '包装时间', width: 180, title: '包装时间' }
                   , { field: '包装人', width: 150, title: '包装人' }
                   ]]

                    });
                });

            });
            $("#pack").click(function () {
                $.ajax({
                    type: "POST",
                    url: '/ProductionPlanning/ProductAdd',
                    data: { WorkorderNO: $("#search-input").val(), QTY: $("#QTY").val(), number: $("#number").val() },
                    async: true,
                    dataType: "json",
                    success: function (data) {
                        if (data != null) {
                            $('#query').click();
                            alert("打包成功");
                        } else {
                            alert("打包失败");
                        }

                    }
                });
            });

        });



    </script>
