@{
    Layout = null;
}

<!--_meta 作为公共模版分离出去-->
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/static/h-ui/css/H-ui.min.css" />
    <link rel="stylesheet" type="text/css" href="~/static/h-ui.admin/css/H-ui.admin.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/Hui-iconfont/1.0.8/iconfont.css" />
    <link rel="stylesheet" type="text/css" href="~/static/h-ui.admin/skin/default/skin.css" id="skin" />
    <link rel="stylesheet" type="text/css" href="~/static/h-ui.admin/css/style.css" />
    <link rel="stylesheet" type="text/css" href="~/layui/css/layui.css" />
    <link href="~/layui/css/layui.css" rel="stylesheet" />
    <title></title>
 
</head>
<body>
    <article class="page-container">

        <form class="layui-form" id="form-article-add" style="margin-top:20px">
            <input type="text" hidden id="ids" value="@ViewData["id"]" name="id">
            <div class="layui-form-item">
                <label class="layui-form-label">客户名称：</label>
                <div class="layui-input-block">
                    <input type="text" lay-verify="required" name="CuName" placeholder="请输入客户名称" value="@ViewData["CuName"]" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">合同编号：</label>
                <div class="layui-input-block">
                    <input type="text" lay-verify="required" name="CuNumber" placeholder="请输入订单编号" value="@ViewData["CuNumber"]" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">合同金额：</label>
                <div class="layui-input-block">
                    <input type="text" lay-verify="required" name="Money" value="@ViewData["Money"]" id="Money" placeholder="请输入合同金额" autocomplete="off" class="layui-input">
                </div>
            </div>      
            <div class="layui-form-item">
                <label class="layui-form-label">是否安装：</label>
                <div class="layui-input-block">
                    <span class="select-box">
                        <select name="IfInstall" class="select" id="IfInstall">
                            <option value="是">是</option>
                            <option value="否">否</option>
                        </select>
                    </span>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">是否含税：</label>
                <div class="layui-input-block">
                    <span class="select-box">
                        <select name="IfIncludeTax" class="select" id="IfIncludeTax">
                            <option value="是">是</option>
                            <option value="否">否</option>
                        </select>
                    </span>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">签订日期：</label>
                <div class="layui-input-block">
                    <input type="text" lay-verify="required" name="DateOfSign" autocomplete="off" class="layui-input" onfocus="WdatePicker()" value="@ViewData["DateOfSign"]">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">是否运输：</label>
                <div class="layui-input-block">
                    <span class="select-box">
                        <select name="IfTransport" class="select" id="IfTransport">
                            <option value="是">是</option>
                            <option value="否">否</option>
                        </select>
                    </span>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">订金金额：</label>
                <div class="layui-input-block" disabled>
                    <input type="text" lay-verify="required" name="DepositAmount" id="DepositAmount" autocomplete="off" class="layui-input" value="@ViewData["DepositAmount"]">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">发货收款金额：</label>
                <div class="layui-input-block">
                    <input type="text" lay-verify="required" name="DeliveryAmount" autocomplete="off" class="layui-input" value="@ViewData["DeliveryAmount"]">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">安装前金额：</label>
                <div class="layui-input-block">
                    <input type="text" lay-verify="required" name="InstallationAmount" autocomplete="off" class="layui-input" value="@ViewData["InstallationAmount"]">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">验收金额：</label>
                <div class="layui-input-block">
                    <input type="text" lay-verify="required" name="AcceptanceAmount" autocomplete="off" class="layui-input" value="@ViewData["AcceptanceAmount"]">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">质保金额：</label>
                <div class="layui-input-block">
                    <input type="text" lay-verify="required" name="QualityAssuranceAmount" autocomplete="off" class="layui-input" value="@ViewData["QualityAssuranceAmount"]">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">交期：</label>
                <div class="layui-input-block">
                    <textarea lay-verify="required" name="SendDate" autocomplete="off" class="layui-textarea">@ViewData["SendDate"]</textarea>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">违约条件：</label>
                <div class="layui-input-block">
                    <textarea lay-verify="required" name="weiyuetiaojian" autocomplete="off" class="layui-textarea">@ViewData["weiyuetiaojian"]</textarea>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">合同总结：</label>
                <div class="layui-input-block">
                    <textarea lay-verify="required" name="CZongJie" autocomplete="off" class="layui-textarea">@ViewData["CZongJie"]</textarea>
                </div>
            </div>
            <div class="row cl">
                <div class="col-xs-8 col-sm-9 col-xs-offset-4 col-sm-offset-2" id="vasd">
                    <button onclick="sub()" class="btn btn-primary radius" type="button"><i class="Hui-iconfont">&#xe632;</i>确定</button>
                </div>
            </div>
        </form>
    </article>

    <!--_footer 作为公共模版分离出去-->
    <script type="text/javascript" src="~/lib/jquery/1.9.1/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/layer/2.4/layer.js"></script>
    <script type="text/javascript" src="~/static/h-ui/js/H-ui.min.js"></script>
    <script type="text/javascript" src="~/static/h-ui.admin/js/H-ui.admin.js"></script> <!--/_footer /作为公共模版分离出去-->
    <!--请在下方写此页面业务相关的脚本-->
    <script type="text/javascript" src="~/lib/My97DatePicker/4.8/WdatePicker.js"></script>
    <script type="text/javascript" src="~/lib/jquery.validation/1.14.0/jquery.validate.js"></script>
    <script type="text/javascript" src="~/lib/jquery.validation/1.14.0/validate-methods.js"></script>
    <script type="text/javascript" src="~/lib/jquery.validation/1.14.0/messages_zh.js"></script>
    <script type="text/javascript" src="~/lib/webuploader/0.1.5/webuploader.min.js"></script>
    <script type="text/javascript" src="~/lib/ueditor/1.4.3/ueditor.config.js"></script>
    <script type="text/javascript" src="~/lib/ueditor/1.4.3/ueditor.all.min.js"> </script>
    <script type="text/javascript" src="~/lib/ueditor/1.4.3/lang/zh-cn/zh-cn.js"></script>
    <script src="~/layui/layui.js" type="text/javascript"></script>

    <script>
        $.ready(
        document.getElementById('IfInstall').value = '@ViewData["IfInstall"]',
        document.getElementById('IfIncludeTax').value = '@ViewData["IfIncludeTax"]',
        document.getElementById('IfTransport').value = '@ViewData["IfTransport"]',
        document.getElementById('IfTransport').value = '@ViewData["IfTransport"]'
         );
        layui.use(['table', 'layer'], function () {
            var table = layui.table, layer = layui.layer;
            table.render({
                elem: '#tw'
           , url: '/Home/checkDetail?id=' + '@ViewData["ContractDetialsCheckId"]'
           , cols: [[

           , { field: 'ID', width: 210, title: '序号', hide: true }
           , { field: 'ProductName', width: 250, title: '产品名称' }
           , { field: 'ProductSpec', width: 210, title: '产品规格', sort: true }
           , {
               field: 'Count', width: 180, title: '合同数量',
           }
           , { field: 'Units', title: '单位', width: 180 }
          // , { field: 'DeliveryedCount', width: 180, title: '发货', sort: true }
          // , { field: 'InstalledQuantity', width: 100, title: '安装', }
          // , { field: 'Acceptance', width: 100, title: '是否验收', sort: true }
          //, { field: 'AcceptanceDate', width: 100, title: '验收日期', sort: true }
           ]]

            });


        });
    </script>
    <script type="text/javascript">
        function sub() {
            $("#form-article-add").ajaxSubmit({
                url: "@Url.Action("EditContractd", "Home")",
                type: "post",
            success: function (data) {
                if (data == "true") {
                    alert("修改成功！");
                    window.parent.location.reload();
                }
            },
            error: function (aa) {
                alert(aa);
            }
        });
        }
        $(function () {
            if ('@ViewData["vas"]' == '2') {
                $("#vasd").css("display", "none");
            }
            $('.skin-minimal input').iCheck({
                checkboxClass: 'icheckbox-blue',
                radioClass: 'iradio-blue',
                increaseArea: '20%'
            });
        
            

            $list = $("#fileList"),
            $btn = $("#btn-star"),
            state = "pending",
            uploader;


        });

    </script>
    <!--/请在上方写此页面业务相关的脚本-->
</body>
</html>


