
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>友力信息管理系统</title>
    <script src="../../My97DatePicker4.7.2/WdatePicker.js"></script>
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
    <link href="~/layui/css/layui.css" rel="stylesheet" />
    <script src="~/layui/layui.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/js/jquery-1.9.1.min.js"></script>
    <script type="text/javascript" src="~/lib/layer/2.4/layer.js"></script>
    <script type="text/javascript" src="~/lib/laypage/1.2/laypage.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            font-family: "微软雅黑";
            font-style: normal;
            font-size: 10px;
        }

        .dropdown {
            position: relative;
            display: inline-block;
            width: 130px;
        }

        .dropdown-selected {
            width: 100% !important;
            height: 20px;
            line-height: 20px;
            border: 1px solid #c6c8cc;
            -webkit-border-radius: 4px;
            -moz-border-radius: 4px;
            border-radius: 4px;
            color: #333;
            text-indent: 10px;
            margin-bottom: 0 !important;
        }

        .dropdown ul {
            padding: 0;
            width: 100%;
            max-height: 200px;
            overflow-y: auto;
            background-color: #fff;
            margin-top: 2px;
            border: 1px solid #c6c8cc;
            position: absolute;
            display: none;
            z-index: 2;
        }

            .dropdown ul li {
                list-style: none;
                text-indent: 10px;
            }

                .dropdown ul li a {
                    display: block;
                    color: #282c33;
                    text-decoration: none;
                    overflow: hidden;
                    text-overflow: ellipsis;
                    white-space: nowrap;
                }

                .dropdown ul li:hover {
                    background-color: #f2f6fa;
                }

                .dropdown ul li a:active, .dropdown ul li.active a {
                    background-color: #e4e9f2;
                }
    </style>
    <script src="~/js/awesomplete.js"></script>
    <script src="~/js/awesomplete.min.js"></script>
    <script type="text/javascript">
        $(document).keydown(function (e) {
            if (e.keyCode == 13) {
                $("#sele").click();
            }
        });
        $(function () {
            layui.use(['table', 'layer'], function () {
                var table = layui.table, layer = layui.layer;
                var tableIns =table.render({
                     elem: '#tw'
                    , url: '/FinishProductHouse/CheckAllFinishedGoods'
                   , page: true
                   , limit: 15
                   , cols: [[
                    { field: '', hide: true }
                   , { field: 'PartNumber', title: '产品名称' }
                   , { field: 'PartSpec', title: '产品规格' }
                   , { field: '数量', width: 100, title: '数量' } 
                   , { field: 'right', width: 300, align: 'center', toolbar: '#barDemo' }
                   ]]
                });
                table.on('tool(demo)', function (obj) {
                    var data = obj.data;
                    switch (obj.event) {
                        case 'check':
                            var PartNumber = data.PartNumber;
                            var PartSpec = data.PartSpec;
                            var url = '/FinishProductHouse/FinishedGoods?PartNumber=' + PartNumber + '&PartSpec=' + PartSpec;
                            var index = layer.open({
                                type: 2,
                                content: url,
                                area: ['90%', '80%']
                            });
                            break;                         
                    }
                });
                $("#sele").click(function () {
                    var PartNumber = $("#PartNumber").val().trim();
                    var PartSpec = $("#PartSpec").val().trim();
                    tableIns.reload({
                        page: {
                            curr: 1
                        },
                        where: {
                            PartNumber: PartNumber
                            , PartSpec: PartSpec
                        }
                    });
                });

            });
        });
    </script>
</head>
<body onselectstart="return false;">
    <div class="place">
        <span>位置：</span>
        <ul class="placeul">
            <li><a href="#">首页</a></li>
            <li><a href="#">成品仓</a></li>
            <li><a href="#">成品库存查询</a></li>
        </ul>
    </div>

    <div class="rightinfo">
        <div class="tools">
            <ul class="toolbar">
                <li>
                    产品名称：
                    <input class="Reservoir" id="PartNumber" type="text" style="width: 120px;" />
                </li>
                <li>
                    产品规格：
                    <input class="CargoArea" id="PartSpec" type="text" style="width: 120px;" />
                </li>
            </ul>
            <button class="layui-btn" data-type="reload" id="sele" usesubmitbehavior=true>搜索</button>
        </div>
        <table class="tablelist" id="tw" lay-filter="demo"></table>
    </div>
    <script type="text/html" id="barDemo">
        <a class="layui-btn layui-btn-xs" id="check" lay-event="check">位置详情</a>
    </script>
    <script type="text/javascript">
        function admin_add(title, url, w, h) {
            layer_show(title, url, w, h);
        }
    </script>
</body>
</html>