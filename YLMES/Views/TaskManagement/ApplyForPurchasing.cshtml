    <script type="text/javascript">
        $(function () {
            layui.use(['table','layer'], function () {
                @*if ('@Session["name"]' == "") {
                    window.top.location = '/Home/Login';
                }*@
                var table = layui.table, layer = layui.layer;
                    table.render({
                     elem: '#tw'
                   , url: '/TaskManagement/ApplyForPurchasingCheck?taskid=' + '@ViewData["taskid"]'
                   , toolbar: '#toolbarDemo'
                   , cols: [[
                    {field:'',hide:true}
                   ,{ type: 'checkbox', fixed: 'left' }
                   , { field: '名称', width: 210, title: '名称', align: 'center' }
                   , { field: '规格', width: 210, title: '型号', align: 'center' }
                   , { field: '品牌', width: 210, title: '品牌', align: 'center' }
                   , { field: '数量', width: 210, title: '使用数量', align: 'center' }
                   , { field: '单位', width: 210, title: '单位', align: 'center' }
                   , { field: 'StockQTY', title: '购买数量', width: 200, align: 'center',edit: Text, style: "color:#009688" }
                   , { field: 'right', width: 100, align: 'center', toolbar: '#barDemo' }
                   ]]
                    });            
                });
            });
    </script>
    <script type="text/html" id="toolbarDemo">
        <div class="layui-btn-container">
            <button class="layui-btn layui-btn-sm" lay-event="getCheckSubmit">确认申请采购</button>
        </div>
    </script>
